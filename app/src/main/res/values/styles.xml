<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
    </style>

    <style name="Question_AnswerButton">
        <item name="android:background">@drawable/question_answer_button_background</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/answer_backgroundColor</item>
    </style>

    <style name="Answer_ControlButton">
        <item name="android:background">@drawable/answer_control_button_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Text" />

    <style name="Text.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">22sp</item>
    </style>


</resources>
